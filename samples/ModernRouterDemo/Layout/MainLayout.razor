    <Breadcrumbs CssClass="my-3"
                 Options="@breadcrumbOptions" />

    @Body
</div>

@code {
    private BreadcrumbOptions breadcrumbOptions = new()
    {
        HomeLabel = "Dashboard",
        HomeUrl = "/",
        Separator = " › ",
        IncludeHome = true,
        ShowIcons = true,
        ContainerCssClass = "main-breadcrumbs"
    };
}