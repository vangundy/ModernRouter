@page "/home"
@using Microsoft.AspNetCore.Components.Routing

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<a @onclick="@(() => NavigationManager.NavigateTo("orders"))" class="btn btn-primary">
    Go to Orders
</a>
<a @onclick="@(() => NavigationManager.NavigateTo("orders/1"))" class="btn btn-primary">
    Go to Order 1
</a>
<a @onclick="@(() => NavigationManager.NavigateTo("orders/1/details/1"))" class="btn btn-primary">
    Go to Order Details
</a>
<a @onclick="@(() => NavigationManager.NavigateTo("orders/1/details/1/some-slug"))" class="btn btn-primary">
    Go to Order Details with Slug
</a>
