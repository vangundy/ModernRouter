@using Microsoft.AspNetCore.Components.Routing
@using ModernRouter.Components

<PageTitle>Orders - ModernRouter Demo</PageTitle>

<div class="container">

    <div class="page-header">
    @if (Id is null)
    {
        <h1>📋 All Orders</h1>
        <p class="page-description">Browse and manage customer orders</p>
    }
    else
    {
        <h1>📄 Order #@Id</h1>
        <p class="page-description">Details for order @Id</p>
    }
</div>

<div class="action-section">
    <h3>🔗 Navigation Actions</h3>
    <div class="action-grid">
        @if (Id is null)
        {
            <button @onclick="@(() => NavigationManager.NavigateTo("orders/1"))" class="btn btn-outline">
                📄 View Order #1
            </button>
            <button @onclick="@(() => NavigationManager.NavigateTo("orders/2"))" class="btn btn-outline">
                📄 View Order #2
            </button>
        }
        else
        {
            <button @onclick="@(() => NavigationManager.NavigateTo($"orders/{Id}/details/1"))" class="btn btn-outline">
                📝 View Details
            </button>
            <button @onclick="@(() => NavigationManager.NavigateTo($"orders/{Id}/details/1/laptop"))" class="btn btn-outline">
                🏷️ View Product
            </button>
        }
        <button @onclick="@(() => NavigationManager.NavigateTo("/"))" class="btn btn-secondary">
            🏠 Back to Home
        </button>
    </div>
</div>

@if (Id != null)
{
    <div class="order-info">
        <h3>📊 Order Information</h3>
        <div class="info-card">
            <p><strong>Order ID:</strong> @Id</p>
            <p><strong>Status:</strong> Processing</p>
            <p><strong>Customer:</strong> John Doe</p>
            <p><strong>Total:</strong> $299.99</p>
        </div>
    </div>
}

    <Outlet />
</div>

